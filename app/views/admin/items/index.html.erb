<%= link_to "商品新規登録", new_admin_item_path %>

<h1>商品一覧</h1>

<% @items.each do |item| %>

  <p>商品ID</p>
    <span><%= item.id %></span>
  <p>商品名</p>
    <span>
      <%= link_to admin_item_path(item.id) do %>
      <%= item.name %>
      <% end %>
    </span>
  <p>税抜価格</p>
    <span><%= item.price %></span>
  <p>ジャンル</p>
    <span><%= item.genre.name %></span>
  <p>ステータス</p>
    <span>
      <% if item.is_active == true %>
       有効
      <% else %>
       無効
      <% end %>
    </span>

<% end %>