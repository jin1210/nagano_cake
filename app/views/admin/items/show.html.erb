<div class="container">
 <h4>商品詳細</h4>
 <div class="row mt-5">
  <div class="col-2">
   <%= image_tag @item.image, size: "100x100" %>
  </div>
  <div class="col-10">
   <span class="ml-4">
    商品名
  　<%= @item.name %></br>
 　</span>
    商品説明
    <%= @item.introduction %></br>
   <span class="ml-4">
    ジャンル
    <%= @item.genre.name %></br>
   </span>
   <span class="ml-4">
    税込価格（税抜価格)
    <%= @item.price %></br>
   </span>
   <span class="ml-4">
    販売ステータス
    <% if @item.is_active == true %>
       有効
      <% else %>
       無効
    <% end %>
   </span>
  </div>
 </div>
 <p><%= link_to "編集する", edit_admin_item_path, class: "btn btn-success ml-5" %></p>
</div>
