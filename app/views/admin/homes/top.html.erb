<div class="container">
  <h4>注文履歴一覧<h4>
   <table class="table">
    <tr>
     <th class="table-secondary">購入日時</th>
     <th class="table-secondary">購入者</th>
     <th class="table-secondary">注文個数</th>
     <th class="table-secondary">注文ステータス</th>
    </tr>
  <% @orders.each do |order| %>

   <tbody>
    <tr>
     <td>
       <%= link_to edit_admin_order_path(order.id) do %>
        <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
       <% end %>
     </td>
     <td><%= order.name %></td>
     <td><%= order.order_details.sum(:quantity) %></td>
     <td><%= order.status_i18n %></td>
    </tr>
   </tbody>

  <% end %>
 </table>
  <%= paginate @orders %>
</div>