<div class="container">
  <h4>注文履歴一覧<h4>
   <table class="table">
    <tr>
     <th class="table-secondary">購入日時</th>
     <th class="table-secondary">購入者</th>
     <th class="table-secondary">注文個数</th>
     <th class="table-secondary">注文ステータス</th>
    </tr>
  <% @order_details.each do |order_detail| %>

   <tbody>
    <tr>
     <td>
       <%= link_to edit_admin_order_path(order_detail.order.id) do %>
        <%= order_detail.order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
       <% end %>
     </td>
     <td><%= order_detail.order.name %></td>
     <td><%= order_detail.quantity %></td>
     <td><%= order_detail.order.status_i18n %></td>
    </tr>
   </tbody>

  <% end %>
 </table>
 <%= paginate @order_details %>
</div>