<h4>注文履歴詳細</h4>

<p>購入者</p>
 <%= @order.customer.full_name %>
<p>注文日</p>
 <%= @order.create_at %>
<p>配送先</p>
 <%= @order.address %>
 <%= @order.name %>
<p>支払方法</p>
 <%= @order.payment_method_i %>
<p>注文ステータス</p>
 <%= form_with model: @order do |f| %>
  <%= f.select :status, Order.statuses_i18n.invert %>
  <%= f.submit '更新' %>
 <% end %>
 
<%= @order_details.each do |order_detail| %>
 <p>商品名</p>
  <%= order_detail.item.name %>
 <p>単価（税込み）</p>
  <%= order_detail.price %>
 <p>数量</p>
  <%= order_detail.quantity %>
 <p>小計</p>
  <%= order_detail.total_price %>
 <p>製作ステータス</p>
  <%= form_with model: @order_details, url: admin_order_details, method: :patch do |f| %>
   <%= f.select :production_status, OrderDetail.production_statuses_i18n.invert %>
   <%= submit '更新' %>
  <% end %>
<% end %>

<p>商品合計</p>
 <%= @order_details.total_price2 %>
<p>送料</p>
 <%= @order.shipping_cost %>
<p>請求金額</p>
 <%= @order.total_payment %>
 