<div class="container">
 <h4>ジャンル一覧・追加</h4>
  <div class="row mt-4">
   <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    ジャンル名<%= f.text_field :name, class: "ml-5" %>
    <%= f.submit '新規登録', class: "btn btn-success ml-5" %>
   <% end %>
  </div>

  <table class= "mt-5">
   <tr>
    <th class="table-secondary ml-5">ジャンル</th>
   </tr>
   <% @genres.each do |genre| %>
   <tr>
    <td>
     <%= genre.name %>
     <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success ml-5" %>
    </td>
   </tr>
  </table>

   <% end %>
</div>