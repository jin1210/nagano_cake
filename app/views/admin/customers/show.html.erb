<div class="container">
  <h4><%= @customer.full_name %>さんの会員詳細</h4>
  <div class="row mt-4 ml-5">
   会員ID
   <p class="ml-5"><%= @customer.id %></p>
  </div>

  <div class="row mt-4 ml-5">
   氏名
   <p class="ml-5">
   <%= @customer.last_name %>
   <%= @customer.first_name %>
   </p>
  </div>

  <div class="row mt-4 ml-5">
   フリガナ
   <p class="ml-5">
   <%= @customer.last_name_kana %>
   <%= @customer.first_name_kana %>
   </p>
  </div>

  <div class="row mt-4 ml-5">
   郵便番号
   <p class="ml-5"><%= @customer.postal_code %></p>
  </div>

  <div class="row mt-4 ml-5">
   住所
   <p class="ml-5"><%= @customer.address %></p>
  </div>

  <div class="row mt-4 ml-5">
   電話番号
   <p class="ml-5"><%= @customer.telephone_number %></p>
  </div>

  <div class="row mt-4 ml-5">
   メールアドレス
   <p class="ml-5"><%= @customer.email %></p>
  </div>

  <div class="row mt-4 ml-5">
   会員ステータス
   <p class="ml-5">
   <% if @customer.is_active == true %>
    有効
   <% else %>
    退会
   <% end %>
   </p>
  </div>

  <p>
   <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success ml-5" %>
   <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary ml-5" %>
  </p>
</div>
