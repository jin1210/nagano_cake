<div class="container">
  <h4><%= @customer.full_name %> さんの会員情報編集</h4>

  <div class="row mt-4 ml-5">
   会員ID
   <p class="ml-5"><%= @customer.id %></p>
  </div>

  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>

  <div class="row mt-4 ml-5">
   氏名
   <p class="ml-5">
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
   </p>
  </div>

  <div class="row mt-4 ml-5">
   フリガナ
   <p class="ml-3">
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
   </p>
  </div>

  <div class="row mt-4 ml-5">
   郵便番号
   <p class="ml-3"><%= f.text_field :postal_code %></p>
  </div>

  <div class="row mt-4 ml-5">
   住所
   <p class="ml-5"><%= f.text_field :address %></p>
  </div>

  <div class="row mt-4 ml-5">
   電話番号
   <p class="ml-3"><%= f.text_field :telephone_number %></p>
  </div>

  <div class="row mt-4 ml-5">
   メールアドレス
   <p class="ml-1"><%= f.text_field :email %></p>
  </div>

  <div class="row mt-4 ml-5">
   会員ステータス
   <p class="ml-2">
    <%= f.radio_button :is_active, "true" %>有効
    <%= f.radio_button :is_active, "false" %>無効
   </p>
  </div>

  <%= f.submit '変更を保存', class: "btn btn-success ml-5" %>


  <% end %>
</div>