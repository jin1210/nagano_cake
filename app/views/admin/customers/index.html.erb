<h1>会員一覧</h1>
<% @customers.each do |customer| %>

  <p>会員ID</p>
    <span><%= customer.id %></span>
  <p>氏名</p>
    <span>
      <%= link_to admin_customer_path(customer.id) do %>
      <%= customer.full_name %>
      <% end %>
    </span>
  <p>メールアドレス</p>
    <span><%= customer.email %></span>
  <p>ステータス</p>
    <span>
      <% if customer.is_active == true %>
       有効
      <% else %>
       無効
      <% end %>
    </span>

<% end %>