<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <p>名前</p>
   (性)<%= f.text_field :last_name %>
   (名)<%= f.text_field :first_name %>
  <p>フリガナ</p>
   (性)<%= f.text_field :last_name_kana %>
   (名)<%= f.text_field :first_name_kana %>

  <div class="field">
    メールアドレス<%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <p>郵便番号(ハイフンなし)</p>
   <%= f.text_field :postal_code %>
  <p>住所</p>
   <%= f.text_field :address %>
  <p>電話番号</p>
   <%= f.text_field :telephone_number %>

  <div class="field">
    パスワード(6文字以上)<%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    パスワード(確認用)<%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
