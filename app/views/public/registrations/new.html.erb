
<div class="container">

<h4>新規会員登録</h4>


<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
 <div class="row mt-2">
   <div class="col-3">
    名前
   </div>
   <div class="col-4">
     (性)<%= f.text_field :last_name %>
   </div>
   <div class="col-4">
     (名)<%= f.text_field :first_name %>
   </div>
 </div>
 <div class="row mt-2">
   <div class="col-3">
    フリガナ
   </div>
   <div class="col-4">
    (性)<%= f.text_field :last_name_kana %>
   </div>
   <div class="col-4">
    (名)<%= f.text_field :first_name_kana %>
   </div>
 </div>
 <div class="row mt-2">
   <div class="col-3">
    メールアドレス
   </div>
   <div class="col-4 ml-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
   </div>
 </div>
 <div class="row mt-2">
   <div class="col-3">
    郵便番号(ハイフンなし)
   </div>
   <div class="col-4 ml-4">
    <%= f.text_field :postal_code %>
   </div>
 </div>
 <div class="row mt-2">
   <div class="col-3">
    住所
   </div>
   <div class="col-4 ml-4">
    <%= f.text_field :address %>
   </div>
 </div>
 <div class="row mt-2">
   <div class="col-3">
    電話番号
   </div>
   <div class="col-4 ml-4">
    <%= f.text_field :telephone_number %>
   </div>
 </div>
 <div class="row mt-2">
   <div class="col-3">
    パスワード(6文字以上)
   </div>
   <div class="col-4 ml-4">
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %></em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
   </div>
  </div>
  <div class="row mt-2">
   <div class="col-3">
    パスワード(確認用)
   </div>
   <div class="col-4 ml-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>
  </div>
  <div class="row mt-2">
   <%= f.submit "新規登録", class: "btn btn-success ml-5" %>
  </div>
<% end %>

<h4>既に登録済みの方</h4>
<%= link_to "こちら", new_customer_session_path %>からログインしてください
</div>