<div class="container">

  <h4>会員情報編集</h4>

<%= form_with model: @customer, url: customer_path(@customer), method: :patch do |f| %>
 <table class="table table-borderless">



   <tr>
     <td>氏名</td>
     <td><%= f.text_field :last_name %></td>
     <td class="col-8"><%= f.text_field :first_name %></td>
   </tr>
   <tr>
     <td>フリガナ</td>
     <td><%= f.text_field :last_name_kana %></td>
     <td><%= f.text_field :first_name_kana %></td>
   </tr>
   <tr>
     <td>郵便番号</td>
     <td><%= f.text_field :postal_code %></td>
   </tr>
   <tr>
     <td>住所</td>
     <td><%= f.text_field :address %></td>
   </tr>
   <tr>
    <td>電話番号</td>
    <td><%= f.text_field :telephone_number %></td>
   <tr>
    <td>メールアドレス</td>
    <td><%= f.text_field :email %></td>
   </tr>
 </table>

<div class="row">
      <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
 　<% end %>
      <%= link_to "退会する", withdrawal_confirmation_path, class: 'btn btn-danger' %>
</div>



</div>

