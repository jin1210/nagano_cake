会員情報編集

<%= form_with model: @customer, url: customer_path(@customer), method: :patch do |f| %>

氏名<%= f.text_field :last_name, class: 'ml-5' %><%= f.text_field :first_name, class: 'ml-2' %></br>
フリガナ<%= f.text_field :last_name_kana, class: 'ml-3' %><%= f.text_field :first_name_kana, class: 'ml-2' %></br>
郵便番号<%= f.text_field :postal_code, class: 'ml-3' %></br>
住所<%= f.text_field :address, class: 'ml-5' %></br>
電話番号<%= f.text_field :telephone_number, class: 'ml-3' %></br>
メールアドレス<%= f.text_field :email, class: 'ml-3' %></br>
<%= f.submit '編集内容を保存', class: 'btn btn-success ml-4 mt-2', type: 'button' %>
<%= link_to "退会する", withdrawal_confirmation_path, class: 'btn btn-danger ml-4 mt-2', type: 'button' %>
<% end %>

