<h4>注文情報確認</h4>

<div class= "order_confirmation">
<table class="table table-bordered">
<% @cart_items.each do |cart_item| %>

<thead>
 <tr class="table-secondary">
  <th scope="col-1">商品名</th>
  <th scope="col-1">単価(税込)</th>
  <th scope="col-1">数量</th>
  <th scope="col-1">小計</th>
 </tr>
</thead>
<tbody>
 <tr>
  <th scope="row ml-4 mr-4">
   <%= image_tag cart_item.item.image, size: "50x50" %>
   <%= cart_item.item.name %>
  </th>
  <td>
   <%= cart_item.item.with_tax_price %>
  </td>
  <td>
   <%= cart_item.amount %>
  </td>
  <td>
   <%= cart_item.subtotal %>
  </td>
 </tr>
</tbody>
</table>
<table class="table table-bordered align:right">
 <tr>
  <th class="table-secondary">商品合計</th>
   <td>
    <% @total += cart_item.subtotal %>
    <%= @total %>
   </td>
 </tr>
    <% end %>
 <tr>
  <th class="table-secondary">送料</th>
   <td>
    <%= @order.shipping_cost %>
   </td>
 </tr>
 <tr>
   <th class="table-secondary">請求金額</th>
   <td>
    <%= @total_price = @order.shipping_cost + @total %>
   </td>
 </tr>
</table>
</div>
<strong>支払方法</strong>
 <%= @order.payment_method_i18n %></br>
<strong>お届け先</strong>
 <%= @order.address_display_order %></br>

<%= form_with model: @order, url: orders_path, method: :post do |f| %>
 <%= f.hidden_field :name %>
 <%= f.hidden_field :address %>
 <%= f.hidden_field :post_code %>
 <%= f.hidden_field :total_payment, value: @total_price %>
<%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
<div class="d-grid gap-2 col-6 mx-auto">
 <%= f.submit "注文を確定する", class: 'btn btn-success' %>
</div>

<% end %>