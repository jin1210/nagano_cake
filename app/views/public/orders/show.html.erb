<h4>注文履歴詳細</h4>
<div class="container">
  <div class="row">
    <div class="col-9">
    <h5>注文情報</h5>
    <table class="table table-bordered">

      <tr>
       <th class="table-secondary">注文日</th>
       <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
       <th class="table-secondary">配送先</th>
       <td>
         〒<%= @order.post_code %></br>
         <%= @order.address %></br>
         <%= @order.name %>
       </td>
      </tr>
      <tr>
       <th class="table-secondary">支払方法</th>
       <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
       <th class="table-secondary">ステータス</th>
       <td><%= @order.status_i18n %></td>
      </tr>
    </table>
   </div>
   <div class="col-3">
    <h5>請求情報</h5>

    <table class="table table-bordered">

      <tr>
       <th class="table-secondary">商品合計</th>
       <td><%= @total %></td>
      </tr>
      <tr>
       <th class="table-secondary">配送料</th>
       <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
       <th class="table-secondary">ご請求額</th>
       <td><%= @order.total_payment %></td>
      </tr>

    </table>
   </div>
 </div>
 <div class="row">
  <h5>注文内容</h5>

  <table class= "table table-bordered">

  <tr>
   <th class="table-secondary">商品</th>
   <th class="table-secondary">単価(税込)</th>
   <th class="table-secondary">個数</th>
   <th class="table-secondary">小計</th>
  </tr>
  <% @order_details.each do |order_detail| %>
  <tbody>
  <tr>
   <td><%= order_detail.item.name %></td>
   <td><%= order_detail.price %></td>
   <td><%= order_detail.quantity %></td>
   <td><%= @subtotal = order_detail.price * order_detail.quantity %></td>
  </tr>
  <% end %>
  </tbody>
  </table>
 </div>
</div>
