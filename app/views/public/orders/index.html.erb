<h4>注文履歴一覧</h4>

<table class= "table table-bordered pl-1 pr-1">

<tr>
 <th class="table-secondary">注文日</th>
 <th class="table-secondary">配送先</th>
 <th class="table-secondary">注文商品</th>
 <th class="table-secondary">支払金額</th>
 <th class="table-secondary">ステータス</th>
 <th class="table-secondary">注文詳細</th>
</tr>

<% @orders.each do |order| %>

<tbody>
<tr>
 <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
 <td>
  〒<%= order.post_code %></br>
  <%= order.address %></br>
  <%= order.name %>
 </td>
 <td>
  <% order.order_details.each do |order_detail| %>
   <%= order_detail.item.name %></br>
  <% end %>
 </td>
 <td><%= order.total_payment %></td>
 <td><%= order.status_i18n %></td>
 <td>
   <%= link_to "表示する", order_path(order.id), class: 'btn btn-primary mt-3' %>
 </td>
</tr>
</tbody>
<% end %>
</table>
