<%= image_tag @item.image %>

<%= @item.name %>

<%= @item.introduction %>

<%= @item.price %>(税込)

<%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
 <%= f.hidden_field :item_id, :value => @item.id %>
 <%= f.select :amount, ['1','2','3','4','5'], {include_blank: '選択ボックス'} %>
 <%= f.submit 'カートに入れる' %>
<% end %>

