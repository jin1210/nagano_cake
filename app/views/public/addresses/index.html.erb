配送先登録/一覧

<%= form_with model: @address, url: addresses_path, mehtod: :post do |f| %>

郵便番号(ハイフンなし)<%= f.text_field :postal_code %></br>
住所<%= f.text_field :address %></br>
宛名<%= f.text_field :name %></br>
<%= f.submit "保存する" %>

<% end %>

<% @addresses.each do |address| %>

郵便番号<%= address.postal_code %>
住所<%= address.address %>
宛名<%= address.name %>
<%= link_to "編集する", edit_address_path(address.id) %>
<%= link_to "削除する", address_path(address.id), method: :delete %>

<% end %>
